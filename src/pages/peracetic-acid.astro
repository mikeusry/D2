---
import Layout from '../layouts/Layout.astro';
import CloudinaryImage from '../components/CloudinaryImage.astro';

const category = {
  name: 'Peracetic Acid Products',
  slug: 'peracetic-acid',
  description: 'Discover D2 Sanitizers\' peracetic acid solutions for eco-friendly disinfection across industries. Safe, effective, and ideal for agriculture, food, healthcare, and more.',
  heroImage: '6713a13c300a1099643c7312_alpet-paa-5-6-group-1024',
  features: [
    'Powerful oxidizing antimicrobial agent',
    'No harmful residue - breaks down to water and oxygen',
    'Effective in cold water applications',
    'Broad-spectrum antimicrobial activity',
    'FDA approved for food contact surfaces'
  ],
  applications: [
    'Food processing CIP systems',
    'Beverage production sanitization',
    'Produce wash and post-harvest treatment',
    'Wastewater treatment',
    'Healthcare facility disinfection'
  ]
};

const products = [
  {
    title: 'Alpet PAA 15% Antimicrobial Solution',
    slug: 'alpet-paa-15',
    price: '$49.99',
    image: 'alpet-paa-15',
    description: '15% peracetic acid concentrate for food processing'
  },
  {
    title: 'Alpet PAA 5.6% Antimicrobial Solution',
    slug: 'alpet-paa-5-6',
    price: '$39.99',
    image: 'alpet-paa-5-6',
    description: '5.6% peracetic acid solution for versatile applications'
  }
];
---

<Layout
  title={`${category.name} | D2 Sanitizers`}
  description={category.description}
>
  <main>
    {/* Hero Section */}
    <section class="relative bg-navy py-16 md:py-24">
      <div class="absolute inset-0 opacity-10">
        <CloudinaryImage
          publicId={`d2-sanitizers/categories/${category.heroImage}`}
          alt={category.name}
          width={1920}
          height={600}
          crop="fill"
          class="w-full h-full object-cover"
        />
      </div>
      <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-4xl">
          <h1 class="font-heading font-bold text-4xl md:text-5xl lg:text-6xl text-white mb-6">
            {category.name}
          </h1>
          <p class="text-xl text-gray-200 leading-relaxed">
            {category.description}
          </p>
        </div>
      </div>
    </section>

    {/* Features Section */}
    <section class="bg-light-blue py-16">
      <div class="container mx-auto px-6">
        <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy mb-12 text-center">
          Why Choose Our {category.name}?
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
          {category.features.map((feature) => (
            <div class="bg-white p-6 rounded-xl shadow-md flex items-start gap-4">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <p class="text-gray-700">{feature}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Products Grid */}
    <section class="container mx-auto px-6 py-16">
      <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy mb-12 text-center">
        Our Products
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {products.map((product) => (
          <a
            href={`/product/${product.slug}`}
            class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
          >
            <div class="relative h-64 overflow-hidden bg-gray-100">
              <CloudinaryImage
                publicId={`d2-sanitizers/products/${product.image}`}
                alt={product.title}
                width={600}
                height={600}
                crop="fill"
                class="w-full h-full object-contain p-4 hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div class="p-6">
              <h3 class="font-heading font-bold text-xl text-navy mb-2">
                {product.title}
              </h3>
              <p class="text-gray-700 mb-4">
                {product.description}
              </p>
              <div class="flex items-center justify-between">
                <span class="text-2xl font-bold text-primary">{product.price}</span>
                <span class="text-primary font-bold">View Details â†’</span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </section>

    {/* Applications Section */}
    <section class="bg-gray-50 py-16">
      <div class="container mx-auto px-6 max-w-4xl">
        <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy mb-8 text-center">
          Ideal Applications
        </h2>
        <div class="bg-white p-8 rounded-xl shadow-md">
          <ul class="space-y-4">
            {category.applications.map((application) => (
              <li class="flex items-start gap-3">
                <span class="w-2 h-2 bg-primary rounded-full mt-2 flex-shrink-0"></span>
                <span class="text-gray-700 text-lg">{application}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    {/* Educational Content */}
    <section class="container mx-auto px-6 py-16 max-w-4xl">
      <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy mb-8">
        About Peracetic Acid
      </h2>
      <div class="prose prose-lg max-w-none">
        <p class="text-gray-700 leading-relaxed mb-6">
          Peracetic acid (PAA) is a powerful oxidizing agent that provides broad-spectrum antimicrobial activity against bacteria, viruses, fungi, and spores. It's particularly valued in the food industry for its effectiveness and environmental safety profile.
        </p>
        <h3 class="font-heading font-bold text-2xl text-navy mb-4 mt-8">
          Key Benefits
        </h3>
        <ul class="space-y-3 mb-6">
          <li class="text-gray-700"><strong>Environmental Safety:</strong> Breaks down into water, oxygen, and acetic acid</li>
          <li class="text-gray-700"><strong>No Rinse Required:</strong> Approved for no-rinse applications on food contact surfaces</li>
          <li class="text-gray-700"><strong>Cold Water Effective:</strong> Works at low temperatures, saving energy</li>
          <li class="text-gray-700"><strong>Fast Acting:</strong> Rapid antimicrobial action with short contact times</li>
          <li class="text-gray-700"><strong>No Resistance:</strong> Microorganisms cannot develop resistance to PAA</li>
        </ul>
      </div>
    </section>

    {/* CTA Section */}
    <section class="bg-navy py-16">
      <div class="container mx-auto px-6 text-center">
        <h2 class="font-heading font-bold text-3xl md:text-4xl text-white mb-6">
          Need Help with Peracetic Acid Applications?
        </h2>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Our technical team can help you implement PAA solutions in your facility.
        </p>
        <a
          href="/contact"
          class="inline-block px-8 py-4 bg-cyan text-navy font-bold rounded-lg hover:bg-white transition-colors duration-300 shadow-lg hover:shadow-xl"
        >
          Contact Our Team
        </a>
      </div>
    </section>
  </main>
</Layout>