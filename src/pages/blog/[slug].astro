---
import Layout from '../../layouts/Layout.astro';
import CloudinaryImage from '../../components/CloudinaryImage.astro';
import { sanityClient } from '../../lib/sanity';
import { marked } from 'marked';

export async function getStaticPaths() {
  const posts = await sanityClient.fetch(`
    *[_type == "post"] {
      _id,
      title,
      slug,
      body,
      publishedAt
    }
  `);

  return posts.map((post: any) => ({
    params: { slug: post.slug.current },
    props: { post }
  }));
}

const { post } = Astro.props;

// Calculate read time (roughly 200 words per minute)
const wordCount = post.body ? post.body.split(/\s+/).length : 0;
const readTime = Math.ceil(wordCount / 200);

const formattedDate = new Date(post.publishedAt).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Configure marked options for better rendering
marked.setOptions({
  breaks: true,
  gfm: true
});

// Convert markdown to HTML using marked
const htmlContent = post.body ? await marked.parse(post.body) : '';
---

<Layout
  title={`${post.title} | D2 Sanitizers Blog`}
  description={post.body ? post.body.substring(0, 155) + '...' : post.title}
>
  <main>
    {/* Hero Section */}
    <section class="relative bg-navy py-16 md:py-24">
      <div class="container mx-auto px-6 max-w-4xl">
        <div class="mb-6">
          <a href="/blog" class="text-cyan hover:text-white font-bold text-sm">
            ‚Üê Back to Blog
          </a>
        </div>

        <h1 class="font-heading font-bold text-3xl md:text-4xl lg:text-5xl text-white mb-6">
          {post.title}
        </h1>

        <div class="flex flex-wrap items-center gap-6 text-gray-300">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            <span>D2 Sanitizers Team</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <span>{formattedDate}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>{readTime} min read</span>
          </div>
        </div>
      </div>
    </section>

    {/* Article Content */}
    <article class="container mx-auto px-6 py-16 mb-16 max-w-3xl">
      <div class="prose prose-lg max-w-none">
        <div
          class="blog-content"
          set:html={htmlContent}
        />
      </div>
    </article>

    {/* Share Section */}
    <section class="container mx-auto px-6 mb-16 max-w-3xl">
      <div class="border-t border-b border-gray-200 py-8">
        <div class="flex items-center justify-between">
          <h3 class="font-heading font-bold text-xl text-navy">
            Share this article
          </h3>
          <div class="flex gap-4">
            <button
              onclick="window.open(`https://twitter.com/intent/tweet?url=${encodeURIComponent(window.location.href)}&text=${encodeURIComponent('{post.title}')}`, '_blank')"
              class="p-3 bg-light-blue hover:bg-primary hover:text-white rounded-lg transition-colors duration-300"
              aria-label="Share on Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"/>
              </svg>
            </button>
            <button
              onclick="window.open(`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(window.location.href)}`, '_blank')"
              class="p-3 bg-light-blue hover:bg-primary hover:text-white rounded-lg transition-colors duration-300"
              aria-label="Share on LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </button>
            <button
              onclick="window.open(`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(window.location.href)}`, '_blank')"
              class="p-3 bg-light-blue hover:bg-primary hover:text-white rounded-lg transition-colors duration-300"
              aria-label="Share on Facebook"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </section>

    {/* Related Products CTA */}
    <section class="bg-light-blue py-16">
      <div class="container mx-auto px-6 max-w-4xl text-center">
        <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy mb-6">
          Ready to Upgrade Your Sanitization Program?
        </h2>
        <p class="text-lg text-gray-700 mb-8">
          Explore our full range of professional-grade disinfectants and sanitizers.
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a
            href="/surface-sanitizers"
            class="inline-block px-8 py-4 bg-primary text-white font-bold rounded-lg hover:bg-cyan transition-colors duration-300 shadow-lg hover:shadow-xl"
          >
            Shop Products
          </a>
          <a
            href="/contact"
            class="inline-block px-8 py-4 bg-white text-navy font-bold rounded-lg hover:bg-navy hover:text-white border-2 border-navy transition-colors duration-300"
          >
            Contact Us
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Blog Content Styling - Override bottom margins only, top margin comes from global */
  .blog-content h1,
  .blog-content h2,
  .blog-content h3,
  .blog-content h4,
  .blog-content h5,
  .blog-content h6 {
    margin-bottom: 1.5em !important;
  }

  .blog-content p {
    font-family: 'Neuzeit Grotesk', sans-serif !important;
    font-weight: 400 !important;
    font-size: 18px !important;
    line-height: 1.13em !important; /* 20.34px */
    color: rgb(0, 91, 170) !important;
    margin-bottom: 1.5em !important;
  }

  .blog-content ul,
  .blog-content ol {
    @apply mb-8 pl-8 space-y-3;
  }

  .blog-content ul {
    @apply list-disc;
  }

  .blog-content ol {
    @apply list-decimal;
  }

  .blog-content li {
    font-family: 'Neuzeit Grotesk', sans-serif;
    font-weight: 400;
    font-size: 18px;
    line-height: 1.13em; /* 20.34px */
    color: rgb(0, 91, 170);
  }

  .blog-content li p {
    margin-bottom: 0.5rem;
  }

  .blog-content strong {
    @apply font-bold text-navy;
  }

  .blog-content a {
    @apply text-primary hover:text-cyan underline font-medium;
  }

  .blog-content img {
    @apply rounded-lg shadow-md w-full h-auto;
    margin-top: 40px;
    margin-bottom: 40px;
  }

  .blog-content blockquote {
    @apply border-l-4 border-primary pl-6 italic text-gray-600 my-8;
  }

  .blog-content code {
    @apply bg-gray-100 px-2 py-1 rounded text-sm font-mono;
  }

  .blog-content pre {
    @apply bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto my-6;
  }

  .blog-content pre code {
    @apply bg-transparent p-0;
  }

  /* Add spacing between sections */
  .blog-content > * + * {
    @apply mt-6;
  }

  .blog-content > h2 + *,
  .blog-content > h3 + * {
    @apply mt-4;
  }
</style>