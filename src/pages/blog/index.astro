---
import Layout from '../../layouts/Layout.astro';
import CloudinaryImage from '../../components/CloudinaryImage.astro';
import { sanityClient } from '../../lib/sanity';

// Fetch all blog posts from Sanity
const blogPosts = await sanityClient.fetch(`
  *[_type == "post"] | order(publishedAt desc) {
    _id,
    title,
    slug,
    body,
    publishedAt
  }
`);

// Process posts for display
const processedPosts = blogPosts
  .filter((post: any) => post.slug && post.title && post.publishedAt)
  .map((post: any) => {
    const wordCount = post.body ? post.body.split(/\s+/).length : 0;
    const readTime = Math.ceil(wordCount / 200);

    // Extract first paragraph as excerpt
    const excerpt = post.body
      ? post.body.split('\n\n').find((p: string) => p.length > 50)?.substring(0, 200) + '...'
      : 'Read more about this topic...';

    return {
      title: post.title,
      slug: post.slug.current,
      excerpt,
      date: new Date(post.publishedAt),
      readTime: `${readTime} min read`,
      category: 'Education' // Default category for now
    };
  });
---

<Layout
  title="Blog | D2 Sanitizers"
  description="Expert insights, guides, and best practices for commercial sanitization, disinfection, and food safety compliance."
>
  <main class="py-16 md:py-24">
    {/* Hero Section */}
    <section class="container mx-auto px-6 mb-16">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="font-heading font-bold text-4xl md:text-5xl lg:text-6xl text-navy mb-6">
          D2 Sanitizers Blog
        </h1>
        <p class="text-xl text-gray-700 leading-relaxed">
          Expert insights, guides, and best practices for commercial sanitization and food safety
        </p>
      </div>
    </section>

    {/* Blog Posts Grid */}
    <section class="container mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {processedPosts.map((post) => {
          const formattedDate = post.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          });

          return (
            <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 group">
              <a href={`/blog/${post.slug}`} class="block h-full flex flex-col">
                <div class="relative bg-gradient-to-br from-primary to-cyan overflow-hidden">
                  <div class="p-8 min-h-[200px] flex items-center justify-center">
                    <div class="absolute top-4 left-4">
                      <span class="inline-block px-3 py-1 bg-white text-navy font-bold text-xs rounded-full shadow-sm">
                        {post.category}
                      </span>
                    </div>
                    <h2 class="font-heading font-bold text-xl md:text-2xl text-white leading-tight text-center line-clamp-4 mt-8">
                      {post.title}
                    </h2>
                  </div>
                </div>
                <div class="p-6 flex-1 flex flex-col">
                  <div class="flex items-center gap-3 text-xs text-gray-500 mb-4">
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                      <span>{formattedDate}</span>
                    </div>
                    <span>â€¢</span>
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      <span>{post.readTime}</span>
                    </div>
                  </div>
                  <p class="text-gray-600 leading-relaxed mb-4 line-clamp-3 flex-1">
                    {post.excerpt}
                  </p>
                  <div class="flex items-center text-primary group-hover:text-cyan font-bold transition-colors duration-300">
                    <span>Read Article</span>
                    <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </div>
                </div>
              </a>
            </article>
          );
        })}
      </div>

      {/* Coming Soon Message */}
      {processedPosts.length > 0 && (
        <div class="max-w-2xl mx-auto mt-16 text-center bg-light-blue p-8 rounded-xl">
          <h3 class="font-heading font-bold text-2xl text-navy mb-4">
            More Content Coming Soon
          </h3>
          <p class="text-gray-700">
            We're regularly publishing new articles about sanitization best practices, regulatory compliance, and industry insights. Check back soon for more content!
          </p>
        </div>
      )}
    </section>

    {/* Newsletter Signup */}
    <section class="bg-navy py-16 mt-16">
      <div class="container mx-auto px-6 text-center max-w-2xl">
        <h2 class="font-heading font-bold text-3xl md:text-4xl text-white mb-6">
          Stay Informed
        </h2>
        <p class="text-xl text-gray-300 mb-8">
          Subscribe to get the latest articles and industry insights delivered to your inbox.
        </p>
        <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
          <input
            type="email"
            placeholder="Your email address"
            class="flex-1 px-6 py-3 rounded-lg focus:ring-2 focus:ring-cyan focus:outline-none"
            required
          />
          <button
            type="submit"
            class="px-8 py-3 bg-cyan text-navy font-bold rounded-lg hover:bg-white transition-colors duration-300"
          >
            Subscribe
          </button>
        </form>
      </div>
    </section>
  </main>
</Layout>