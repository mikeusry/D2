---
import Layout from '../layouts/Layout.astro';
import CloudinaryImage from '../components/CloudinaryImage.astro';

const category = {
  name: 'Surface Sanitizers',
  slug: 'surface-sanitizers',
  description: 'Professional surface sanitizers that kill 99.9% of bacteria on food contact and non-food contact surfaces in seconds.',
  heroImage: '6713a72195c4a7cab5e3cfd3_2019-alpet-d2-group-1024',
  features: [
    'Kills 99.9% of bacteria in 10-60 seconds',
    'FDA approved for food contact surfaces',
    'No rinse required on most applications',
    'Highly evaporative formulas',
    'Available in spray, wipes, and concentrate formats'
  ],
  applications: [
    'Food processing equipment and surfaces',
    'Commercial kitchen prep areas',
    'Food service countertops and tables',
    'Packaging and production lines',
    'Industrial food manufacturing'
  ]
};

const products = [
  {
    title: 'Alpet D2 Surface Sanitizer Spray',
    slug: 'alpet-d2-surface-sanitizer',
    price: '$15.99',
    image: 'alpet_d2_surface_sanitizer_case',
    description: '70% alcohol formula for fast, effective surface sanitization'
  },
  {
    title: 'Alpet D2 Surface Sanitizing Wipes',
    slug: 'alpet-d2-wipes',
    price: '$12.99',
    image: 'alpet-d2-wipes',
    description: 'Convenient pre-saturated wipes for quick surface sanitization'
  },
  {
    title: 'Alpet D2 Quat-Free Surface Sanitizer',
    slug: 'alpet-d2-quat-free',
    price: '$17.99',
    image: 'alpet-d2-quat-free',
    description: 'Alcohol-based formula without quaternary ammonium compounds'
  }
];
---

<Layout
  title={`${category.name} | D2 Sanitizers`}
  description={category.description}
>
  <main>
    {/* Hero Section */}
    <section class="relative bg-navy py-16 md:py-24">
      <div class="absolute inset-0 opacity-10">
        <CloudinaryImage
          publicId={`d2-sanitizers/categories/${category.heroImage}`}
          alt={category.name}
          width={1920}
          height={600}
          crop="fill"
          class="w-full h-full object-cover"
        />
      </div>
      <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-4xl">
          <h1 class="font-heading font-bold text-4xl md:text-5xl lg:text-6xl text-white mb-6">
            {category.name}
          </h1>
          <p class="text-xl text-gray-200 leading-relaxed">
            {category.description}
          </p>
        </div>
      </div>
    </section>

    {/* Features Section */}
    <section class="bg-light-blue py-16">
      <div class="container mx-auto px-6">
        <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy mb-12 text-center">
          Why Choose Our {category.name}?
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
          {category.features.map((feature) => (
            <div class="bg-white p-6 rounded-xl shadow-md flex items-start gap-4">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <p class="text-gray-700">{feature}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Products Grid */}
    <section class="container mx-auto px-6 py-16">
      <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy mb-12 text-center">
        Our Products
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {products.map((product) => (
          <a
            href={`/product/${product.slug}`}
            class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
          >
            <div class="relative h-64 overflow-hidden bg-gray-100">
              <CloudinaryImage
                publicId={`d2-sanitizers/products/${product.image}`}
                alt={product.title}
                width={600}
                height={600}
                crop="fill"
                class="w-full h-full object-contain p-4 hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div class="p-6">
              <h3 class="font-heading font-bold text-xl text-navy mb-2">
                {product.title}
              </h3>
              <p class="text-gray-700 mb-4">
                {product.description}
              </p>
              <div class="flex items-center justify-between">
                <span class="text-2xl font-bold text-primary">{product.price}</span>
                <span class="text-primary font-bold">View Details â†’</span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </section>

    {/* Applications Section */}
    <section class="bg-gray-50 py-16">
      <div class="container mx-auto px-6 max-w-4xl">
        <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy mb-8 text-center">
          Ideal Applications
        </h2>
        <div class="bg-white p-8 rounded-xl shadow-md">
          <ul class="space-y-4">
            {category.applications.map((application) => (
              <li class="flex items-start gap-3">
                <span class="w-2 h-2 bg-primary rounded-full mt-2 flex-shrink-0"></span>
                <span class="text-gray-700 text-lg">{application}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    {/* Educational Content */}
    <section class="container mx-auto px-6 py-16 max-w-4xl">
      <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy mb-8">
        Surface Sanitization Best Practices
      </h2>
      <div class="prose prose-lg max-w-none">
        <p class="text-gray-700 leading-relaxed mb-6">
          Proper surface sanitization is essential for food safety and regulatory compliance. Our surface sanitizers provide rapid kill times while being safe for use on food contact surfaces.
        </p>
        <h3 class="font-heading font-bold text-2xl text-navy mb-4 mt-8">
          Application Guidelines
        </h3>
        <ul class="space-y-3 mb-6">
          <li class="text-gray-700">Clean surfaces thoroughly before sanitizing</li>
          <li class="text-gray-700">Apply sanitizer ensuring complete surface coverage</li>
          <li class="text-gray-700">Allow proper contact time per label instructions</li>
          <li class="text-gray-700">No rinse required on most food contact surfaces</li>
          <li class="text-gray-700">Repeat application as needed throughout production</li>
        </ul>
      </div>
    </section>

    {/* CTA Section */}
    <section class="bg-navy py-16">
      <div class="container mx-auto px-6 text-center">
        <h2 class="font-heading font-bold text-3xl md:text-4xl text-white mb-6">
          Need Help Selecting the Right Product?
        </h2>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Our team can help you choose the perfect surface sanitization solution for your facility.
        </p>
        <a
          href="/contact"
          class="inline-block px-8 py-4 bg-cyan text-navy font-bold rounded-lg hover:bg-white transition-colors duration-300 shadow-lg hover:shadow-xl"
        >
          Contact Our Team
        </a>
      </div>
    </section>
  </main>
</Layout>