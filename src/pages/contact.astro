---
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Contact Us | D2 Sanitizers"
  description="Get in touch with D2 Sanitizers for questions about our professional sanitization products, custom solutions, or technical support. We're here to help."
>
  <main class="py-16 md:py-24">
    {/* Hero Section */}
    <section class="container mx-auto px-6 mb-16">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="font-heading font-bold text-4xl md:text-5xl lg:text-6xl text-navy mb-6">
          Contact Us
        </h1>
        <p class="text-xl text-gray-700 leading-relaxed">
          Have questions? We're here to help with product information, technical support, and custom solutions.
        </p>
      </div>
    </section>

    {/* Contact Form and Info */}
    <section class="container mx-auto px-6 mb-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        {/* Contact Form */}
        <div class="bg-white p-8 rounded-xl shadow-lg">
          <h2 class="font-heading font-bold text-2xl md:text-3xl text-navy mb-6">
            Send Us a Message
          </h2>
          <form id="contact-form" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-bold text-navy mb-2">
                Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                placeholder="Your name"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-bold text-navy mb-2">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                placeholder="your.email@company.com"
              />
            </div>
            <div>
              <label for="phone" class="block text-sm font-bold text-navy mb-2">
                Phone
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                placeholder="(123) 456-7890"
              />
            </div>
            <div>
              <label for="company" class="block text-sm font-bold text-navy mb-2">
                Company
              </label>
              <input
                type="text"
                id="company"
                name="company"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                placeholder="Your company name"
              />
            </div>
            <div>
              <label for="subject" class="block text-sm font-bold text-navy mb-2">
                Subject *
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                placeholder="How can we help?"
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-bold text-navy mb-2">
                Message *
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent resize-none"
                placeholder="Tell us more about your needs..."
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full px-8 py-4 bg-primary text-white font-bold rounded-lg hover:bg-cyan transition-colors duration-300 shadow-lg hover:shadow-xl"
            >
              Send Message
            </button>
            <p id="form-message" class="text-sm text-center hidden"></p>
          </form>
        </div>

        {/* Contact Information */}
        <div class="space-y-8">
          <div class="bg-light-blue p-8 rounded-xl">
            <h3 class="font-heading font-bold text-xl text-navy mb-4">
              Contact Information
            </h3>
            <div class="space-y-4">
              <div>
                <p class="text-sm font-bold text-navy mb-1">Address</p>
                <p class="text-gray-700">
                  189 Luke Road<br />
                  Bogart, GA 30622
                </p>
              </div>
              <div>
                <p class="text-sm font-bold text-navy mb-1">Phone</p>
                <p class="text-gray-700">
                  <a href="tel:+17622558353" class="text-primary hover:text-cyan">
                    (762) 255-8353
                  </a>
                </p>
              </div>
              <div>
                <p class="text-sm font-bold text-navy mb-1">Hours</p>
                <p class="text-gray-700">
                  Monday - Friday: 8:00 AM - 5:00 PM EST
                </p>
              </div>
            </div>
          </div>

          <div class="bg-white p-8 rounded-xl shadow-lg">
            <h3 class="font-heading font-bold text-xl text-navy mb-4">
              What We Can Help With
            </h3>
            <ul class="space-y-3 text-gray-700">
              <li class="flex items-start">
                <span class="text-primary mr-2">•</span>
                <span>Product recommendations and specifications</span>
              </li>
              <li class="flex items-start">
                <span class="text-primary mr-2">•</span>
                <span>Custom sanitization solutions</span>
              </li>
              <li class="flex items-start">
                <span class="text-primary mr-2">•</span>
                <span>Technical support and training</span>
              </li>
              <li class="flex items-start">
                <span class="text-primary mr-2">•</span>
                <span>Compliance and regulatory questions</span>
              </li>
              <li class="flex items-start">
                <span class="text-primary mr-2">•</span>
                <span>Bulk orders and pricing</span>
              </li>
              <li class="flex items-start">
                <span class="text-primary mr-2">•</span>
                <span>Safety data sheets and documentation</span>
              </li>
            </ul>
          </div>

          <div class="bg-navy p-8 rounded-xl text-white">
            <h3 class="font-heading font-bold text-xl mb-4">
              Need Immediate Assistance?
            </h3>
            <p class="mb-4">
              For urgent technical support or product inquiries, give us a call during business hours.
            </p>
            <a
              href="tel:+17622558353"
              class="inline-block px-6 py-3 bg-cyan text-navy font-bold rounded-lg hover:bg-white transition-colors duration-300"
            >
              Call Now
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const formMessage = document.getElementById('form-message') as HTMLElement;

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      // Here you would integrate with your form handling service
      // For now, just show a success message
      formMessage.textContent = 'Thank you for your message! We will get back to you soon.';
      formMessage.classList.remove('hidden', 'text-red-600');
      formMessage.classList.add('text-green-600');

      form.reset();

      // Hide message after 5 seconds
      setTimeout(() => {
        formMessage.classList.add('hidden');
      }, 5000);
    });
  });
</script>