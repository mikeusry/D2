---
import Layout from '../layouts/Layout.astro';
import CloudinaryImage from '../components/CloudinaryImage.astro';

const category = {
  name: 'Hand Sanitizers',
  slug: 'hand-sanitizers',
  description: 'Professional-grade hand sanitizers that meet FDA regulations for food processing, commercial kitchens, and industrial facilities.',
  heroImage: '67139ef2c33a68ca4b067edb_hand_sanitizer_1',
  features: [
    '70% alcohol formula for maximum effectiveness',
    'FDA compliant for food contact surfaces',
    'No rinse required - perfect for high-traffic areas',
    'Available in spray, foam, and gel formats',
    'Kills 99.9% of bacteria in 10 seconds'
  ],
  applications: [
    'Food processing facilities',
    'Commercial kitchens and restaurants',
    'Healthcare and medical facilities',
    'Industrial and manufacturing plants',
    'Schools and educational institutions'
  ]
};

// Products will be fetched from Sanity in production
const products = [
  {
    title: 'Alpet E3 Hand Sanitizer Spray',
    slug: 'alpet-e3-hand-sanitizer',
    price: '$15.99',
    image: 'alpet-e3-spray',
    description: 'Fast-acting 70% alcohol hand sanitizer spray for professional use'
  },
  {
    title: 'Alpet E3 Plus Hand Sanitizer Spray',
    slug: 'alpet-e3-plus-hand-sanitizer',
    price: '$18.99',
    image: 'alpet-e3-plus-spray',
    description: 'Enhanced formula with skin conditioners for frequent use'
  }
];
---

<Layout
  title={`${category.name} | D2 Sanitizers`}
  description={category.description}
>
  <main>
    {/* Hero Section */}
    <section class="relative bg-navy py-16 md:py-24">
      <div class="absolute inset-0 opacity-10">
        <CloudinaryImage
          publicId={`d2-sanitizers/categories/${category.heroImage}`}
          alt={category.name}
          width={1920}
          height={600}
          crop="fill"
          class="w-full h-full object-cover"
        />
      </div>
      <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-4xl">
          <h1 class="font-heading font-bold text-4xl md:text-5xl lg:text-6xl text-white mb-6">
            {category.name}
          </h1>
          <p class="text-xl text-gray-200 leading-relaxed">
            {category.description}
          </p>
        </div>
      </div>
    </section>

    {/* Features Section */}
    <section class="bg-light-blue py-16">
      <div class="container mx-auto px-6">
        <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy mb-12 text-center">
          Why Choose Our {category.name}?
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
          {category.features.map((feature) => (
            <div class="bg-white p-6 rounded-xl shadow-md flex items-start gap-4">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <p class="text-gray-700">{feature}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Products Grid */}
    <section class="container mx-auto px-6 py-16">
      <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy mb-12 text-center">
        Our Products
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {products.map((product) => (
          <a
            href={`/product/${product.slug}`}
            class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
          >
            <div class="relative h-64 overflow-hidden bg-gray-100">
              <CloudinaryImage
                publicId={`d2-sanitizers/products/${product.image}`}
                alt={product.title}
                width={600}
                height={600}
                crop="fill"
                class="w-full h-full object-contain p-4 hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div class="p-6">
              <h3 class="font-heading font-bold text-xl text-navy mb-2">
                {product.title}
              </h3>
              <p class="text-gray-700 mb-4">
                {product.description}
              </p>
              <div class="flex items-center justify-between">
                <span class="text-2xl font-bold text-primary">{product.price}</span>
                <span class="text-primary font-bold">View Details â†’</span>
              </div>
            </div>
          </a>
        ))}
      </div>

      {/* Coming Soon */}
      <div class="max-w-2xl mx-auto mt-12 text-center bg-light-blue p-8 rounded-xl">
        <h3 class="font-heading font-bold text-2xl text-navy mb-4">
          More Products Coming Soon
        </h3>
        <p class="text-gray-700 mb-6">
          We're expanding our product line. Contact us for specific product recommendations for your facility.
        </p>
        <a
          href="/contact"
          class="inline-block px-8 py-3 bg-primary text-white font-bold rounded-lg hover:bg-cyan transition-colors duration-300"
        >
          Contact Us
        </a>
      </div>
    </section>

    {/* Applications Section */}
    <section class="bg-gray-50 py-16">
      <div class="container mx-auto px-6 max-w-4xl">
        <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy mb-8 text-center">
          Ideal Applications
        </h2>
        <div class="bg-white p-8 rounded-xl shadow-md">
          <ul class="space-y-4">
            {category.applications.map((application) => (
              <li class="flex items-start gap-3">
                <span class="w-2 h-2 bg-primary rounded-full mt-2 flex-shrink-0"></span>
                <span class="text-gray-700 text-lg">{application}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    {/* Educational Content */}
    <section class="container mx-auto px-6 py-16 max-w-4xl">
      <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy mb-8">
        Hand Sanitization Best Practices
      </h2>
      <div class="prose prose-lg max-w-none">
        <p class="text-gray-700 leading-relaxed mb-6">
          Proper hand sanitization is critical in food processing and food service environments. Our alcohol-based hand sanitizers provide rapid antimicrobial action, killing 99.9% of bacteria in just 10 seconds without requiring water or rinsing.
        </p>
        <h3 class="font-heading font-bold text-2xl text-navy mb-4 mt-8">
          When to Use Hand Sanitizer
        </h3>
        <ul class="space-y-3 mb-6">
          <li class="text-gray-700">Before and after handling food products</li>
          <li class="text-gray-700">After touching raw materials or equipment</li>
          <li class="text-gray-700">When transitioning between work areas</li>
          <li class="text-gray-700">After removing gloves or PPE</li>
          <li class="text-gray-700">When soap and water are not readily available</li>
        </ul>
        <h3 class="font-heading font-bold text-2xl text-navy mb-4 mt-8">
          Compliance and Regulations
        </h3>
        <p class="text-gray-700 leading-relaxed mb-6">
          All our hand sanitizers meet FDA requirements for use in food processing facilities. They are formulated to provide effective antimicrobial action while being safe for repeated use throughout the workday.
        </p>
      </div>
    </section>

    {/* CTA Section */}
    <section class="bg-navy py-16">
      <div class="container mx-auto px-6 text-center">
        <h2 class="font-heading font-bold text-3xl md:text-4xl text-white mb-6">
          Need Help Selecting the Right Product?
        </h2>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Our team can help you choose the perfect hand sanitization solution for your facility's specific needs.
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a
            href="/contact"
            class="inline-block px-8 py-4 bg-cyan text-navy font-bold rounded-lg hover:bg-white transition-colors duration-300 shadow-lg hover:shadow-xl"
          >
            Contact Our Team
          </a>
          <a
            href="/resources"
            class="inline-block px-8 py-4 bg-transparent text-white font-bold rounded-lg border-2 border-white hover:bg-white hover:text-navy transition-colors duration-300"
          >
            View Resources
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>