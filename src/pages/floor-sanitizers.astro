---
import Layout from '../layouts/Layout.astro';
import CloudinaryImage from '../components/CloudinaryImage.astro';

const category = {
  name: 'Floor Sanitizers for Food Service',
  slug: 'floor-sanitizers',
  description: 'Professional floor sanitizers designed specifically for food processing and commercial kitchen environments.',
  heroImage: '67167a740731c80cb9d82170_floor_sanitizer_4',
  features: [
    'Food-safe formulations for processing areas',
    'Effective against bacteria and biofilm',
    'Compatible with various floor types',
    'Low foam for automated systems',
    'EPA registered for food facilities'
  ],
  applications: [
    'Food processing plant floors',
    'Commercial kitchen floors',
    'Walk-in coolers and freezers',
    'Production and packaging areas',
    'Loading docks and receiving areas'
  ]
};

const products = [
  {
    title: 'Dry Step Bicarb Granulated Floor Treatment',
    slug: 'dry-step-floor-treatment',
    price: '$24.99',
    image: 'dry-step-floor-treatment',
    description: 'Granulated floor sanitizer for high-traffic areas'
  }
];
---

<Layout
  title={`${category.name} | D2 Sanitizers`}
  description={category.description}
>
  <main>
    {/* Hero Section */}
    <section class="relative bg-navy py-16 md:py-24">
      <div class="absolute inset-0 opacity-10">
        <CloudinaryImage
          publicId={`d2-sanitizers/categories/${category.heroImage}`}
          alt={category.name}
          width={1920}
          height={600}
          crop="fill"
          class="w-full h-full object-cover"
        />
      </div>
      <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-4xl">
          <h1 class="font-heading font-bold text-4xl md:text-5xl lg:text-6xl text-white mb-6">
            {category.name}
          </h1>
          <p class="text-xl text-gray-200 leading-relaxed">
            {category.description}
          </p>
        </div>
      </div>
    </section>

    {/* Features Section */}
    <section class="bg-light-blue py-16">
      <div class="container mx-auto px-6">
        <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy mb-12 text-center">
          Why Choose Our {category.name}?
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
          {category.features.map((feature) => (
            <div class="bg-white p-6 rounded-xl shadow-md flex items-start gap-4">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <p class="text-gray-700">{feature}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Products Grid */}
    <section class="container mx-auto px-6 py-16">
      <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy mb-12 text-center">
        Our Products
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {products.map((product) => (
          <a
            href={`/product/${product.slug}`}
            class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
          >
            <div class="relative h-64 overflow-hidden bg-gray-100">
              <CloudinaryImage
                publicId={`d2-sanitizers/products/${product.image}`}
                alt={product.title}
                width={600}
                height={600}
                crop="fill"
                class="w-full h-full object-contain p-4 hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div class="p-6">
              <h3 class="font-heading font-bold text-xl text-navy mb-2">
                {product.title}
              </h3>
              <p class="text-gray-700 mb-4">
                {product.description}
              </p>
              <div class="flex items-center justify-between">
                <span class="text-2xl font-bold text-primary">{product.price}</span>
                <span class="text-primary font-bold">View Details â†’</span>
              </div>
            </div>
          </a>
        ))}
      </div>

      <div class="max-w-2xl mx-auto mt-12 text-center bg-light-blue p-8 rounded-xl">
        <h3 class="font-heading font-bold text-2xl text-navy mb-4">
          Need a Custom Solution?
        </h3>
        <p class="text-gray-700 mb-6">
          Contact us for recommendations on floor sanitization systems for your facility.
        </p>
        <a
          href="/contact"
          class="inline-block px-8 py-3 bg-primary text-white font-bold rounded-lg hover:bg-cyan transition-colors duration-300"
        >
          Contact Us
        </a>
      </div>
    </section>

    {/* Applications Section */}
    <section class="bg-gray-50 py-16">
      <div class="container mx-auto px-6 max-w-4xl">
        <h2 class="font-heading font-bold text-3xl md:text-4xl text-navy mb-8 text-center">
          Ideal Applications
        </h2>
        <div class="bg-white p-8 rounded-xl shadow-md">
          <ul class="space-y-4">
            {category.applications.map((application) => (
              <li class="flex items-start gap-3">
                <span class="w-2 h-2 bg-primary rounded-full mt-2 flex-shrink-0"></span>
                <span class="text-gray-700 text-lg">{application}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    {/* CTA Section */}
    <section class="bg-navy py-16">
      <div class="container mx-auto px-6 text-center">
        <h2 class="font-heading font-bold text-3xl md:text-4xl text-white mb-6">
          Need Help Selecting the Right Product?
        </h2>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Our team can help you choose the perfect floor sanitization solution.
        </p>
        <a
          href="/contact"
          class="inline-block px-8 py-4 bg-cyan text-navy font-bold rounded-lg hover:bg-white transition-colors duration-300 shadow-lg hover:shadow-xl"
        >
          Contact Our Team
        </a>
      </div>
    </section>
  </main>
</Layout>